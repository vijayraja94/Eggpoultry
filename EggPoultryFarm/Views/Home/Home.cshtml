                    type: "post",
                    url: '@Url.Action("Verfiy", "Home")',
                    data: JSON.stringify(input),
                    dataType: "json",
                    async: false,
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        //debugger
                        if (data.status == "01") {
                            alert(data.Message);

                            window.location.href = '@Url.Action("Home", "Home")';
                        }
                        else {
                            //alert(data.Message);
                            if (data.Result != undefined && data.Result != null && data.Result != "")
                            {
                                alert("Success");
                                $("#div_Value").html('<h1>' + data.Result + '</h1>')
                            }
                            else {
                                $("#div_Value").html('<h1></h1>')
                                alert(data.Message);
                                    
                            }
                        }
                    },
                    error: function (ex) {
                    },
                })
            }


