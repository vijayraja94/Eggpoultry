    .s_bode {
        width: 800px;
        height: 40vh;
        padding: 20px;
        display: flex;
        position: relative;
        z-index: 1000;
        border-radius: 20px;
        background-image: url(https://images.unsplash.com/photo-1563299796-b729d0af54a5?ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mzd8fHN0YWRpdW18ZW58MHx8MHx8&ixlib=rb-1.2.1&w=1000&q=80);
        background-position: 0 -289px;
        background-size: cover;
        overflow: hidden;
        margin-left: 6%;
    }


        .s_bode:after {
            content: '';
            height: 100%;
            width: 100%;
            position: absolute;
            top: 0;
            left: 0;
            background-color: rgba(0, 0, 0, .8);
            z-index: -2;
            border-radius: 20px;
        }


        .s_bode:before {
            content: '';
            height: 100%;
            width: 100%;
            position: absolute;
            top: 0;
            left: -47%;
            background-color: rgba(255, 255, 255, .2);
            z-index: -1;
            transform: skewX(-10deg);
        }

        .s_bode img {
            height: 100px;
            width: 100px;
        }

    .left_section {
        flex-grow: 2;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .mid_section {
